{
  "name": "backstop-template",
  "version": "1.0.0",
  "description": "A template for all projects using [BackstopJS](https://github.com/garris/BackstopJS)",
  "main": "index.js",
  "scripts": {
    "backstop": "cd _ci/backstop && backstop",
    "approve": "cd _ci/backstop && BACKSTOP_REMOTE_HTTP_PORT=3113 backstop approve --config='backstop.config.js'",
    "init": "cd _ci/backstop && BACKSTOP_REMOTE_HTTP_PORT=3113 backstop init",
    "remote": "cd _ci/backstop && BACKSTOP_REMOTE_HTTP_PORT=3113 backstop remote --config='backstop.config.js'",
    "report": "cd _ci/backstop && BACKSTOP_REMOTE_HTTP_PORT=3113 backstop openReport --config='backstop.config.js'",
    "serve": "live-server ./project",
    "test": "cd _ci/backstop && BACKSTOP_REMOTE_HTTP_PORT=3113 backstop test --config='backstop.config.js'"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "backstopjs": "^6.2.2"
  },
  "devDependencies": {
    "live-server": "^1.2.2",
    "nodemon": "^3.0.1"
  }
}
